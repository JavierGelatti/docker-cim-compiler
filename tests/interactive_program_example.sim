begin
    real Pi = 3.14159265;
    real Radius;

    OutText("Input the radius:");
    OutImage;
    Radius := InReal; ! Read in the radius;

    OutText("Radius        = ");
    OutFix(Radius, 6, 12);
    OutImage;

    OutText("Area          = ");
    OutFix(Pi * (Radius**2), 6, 12);
    OutImage;

    OutText("Circumference = ");
    OutFix(2 * Pi * Radius, 6, 12);
    OutImage
end
